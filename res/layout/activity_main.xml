<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_all_black" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="vertical"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/heart_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="心率"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/step_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="步数"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/absListview_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="有AbsListView的Activity"
                android:visibility="gone" />

            <Button
                android:id="@+id/scrollview_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="滚动式"
                android:textColor="#ffffff"
                android:visibility="gone" />

            <Button
                android:id="@+id/viewpager_activity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="车辆控制"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/trace_activity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="轨迹查询"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/chaosu_activity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="超速提醒"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/carstatus_activity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="车况报警"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/clock_activity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="闹钟与提醒"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/date_activity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="时间与日期"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/blueteeth_activity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="蓝牙设置"
                android:textColor="#ffffff" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>